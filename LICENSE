reminders = []
blue = "\033[34m"
red = "\033[31m"
cyan = "\033[36m"
magenta = "\033[35m"
reset = "\033[0m"
def todo_list():
#check if name is str and date is int, if not than false, else add into reminder
    try:
        name = input(blue+"please enter your reminder:"+reset)
        date = input(blue+"please enter your date DD/MM/YY:"+reset)

        if not name.strip() and not date.strip():
            print("it cannot be empty")
            return
        elif name != str and date != int:
            print("name must be str, date must be int")
        else:
            reminders.append({"name":name, "date": date})
            print(cyan+f"{name}, {date}\n"+reset)

    except:
        print(red+"reminder use str date use int"+reset)

while True:
#if true ask if they want to add more reminder, next is add give a number to your reminder
#last if user want to remove their reminder then enter the name, else item is false
    todo_list()
    task = input(red+"Add another reminder? (y/n): "+reset)
    if task.lower() == "n":
        break

print("this is your to-do list")
for i, task in enumerate(reminders, 1):
    print(cyan+f"{i}, {task['name']} - {task['date']}"+reset)

completed = input("enter your completed reminder:")

for r in reminders:
    if r["name"].lower() == completed.lower():
        reminders.remove(r)
        print(cyan+f"item have remove: {r['name']}"+reset)
        break

else:
        print(cyan+f"this item is not here:{completed}"+reset)

#this is raw text
print(blue+r"""
Wolf
                     .
                    / V\
                  / `  /
                 <<   |
                 /    |
               /      |
             /        |
           /    \  \ /
          (      ) | |
  ________|   _/_  | |
<__________\______)\__)
"""+reset)
